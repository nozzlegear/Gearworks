.error {
    color: #fff;
    
    h2 {
        font-size: 10em;
        color: #fff;
        text-align: center;
        line-height: 1.2;
    }
    h3 {
        color: #fff;
        text-align: center;
        margin-bottom: 25px;
        line-height: 1.2;
    } 
    p.lead {
        text-align: center;
    }
}

.minimal
{
    padding: 0;
    height: 100%;
    background: #354b72;
}

#error
{
    h1.logo
    {
        margin-top: 6.5rem;
        margin-bottom: 4rem;
        text-align: center;
        font-weight:300;
        
        a
        {
            color: #fff;
            font-size: 3.1rem;
            font-family: Lato,"Helvetica Neue",Arial;
            text-shadow: .1rem .1rem .1rem rgba(0,0,0,.6);
            transition: color .25s linear;
            text-decoration: none;
            
            &:hover
            {
                text-decoration: none;
                color: #bbb;
            }
        }
    }
    
    .error
    {
        text-align: center;
        
        h2
        {
            margin: 2rem 0;
            font-size: 10em;
        }
        
        h3
        {
            margin-bottom: 0 0 2.5rem 0;
            font-size: 3.15rem;
        }
        
        a.back
        {
            font-size: 2.1rem;
            margin-bottom: 2rem;
            line-height: 1.3;
            font-weight:300;
        }
    }
}